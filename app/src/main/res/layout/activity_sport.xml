<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MapActivity"
    android:background="@color/grey_FitnessApp">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/fitnessApp"
        android:textColor="@color/white"
        android:textSize="24sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintVertical_bias="0.02"/>

    <ImageButton
        android:id="@+id/buttonBackMap"
        android:layout_width="45dp"
        android:layout_height="35dp"
        android:background="@drawable/rectangle_rounded_white"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_bias="0.05"
        app:layout_constraintVertical_bias="0.02"
        />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/return_1"
        app:layout_constraintStart_toStartOf="@id/buttonBackMap"
        app:layout_constraintTop_toTopOf="@id/buttonBackMap"
        app:layout_constraintEnd_toEndOf="@id/buttonBackMap"
        app:layout_constraintBottom_toBottomOf="@id/buttonBackMap"/>

    <View
        android:id="@+id/BoxMap"
        android:layout_width="370dp"
        android:layout_height="636dp"
        android:background="@drawable/rectangle_rounded_white"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.478"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.64" />

    <fragment
        android:id="@+id/map"
        android:layout_width="370dp"
        android:layout_height="636dp"
        app:layout_constraintBottom_toBottomOf="@id/BoxMap"
        app:layout_constraintEnd_toEndOf="@id/BoxMap"
        app:layout_constraintStart_toStartOf="@id/BoxMap"
        app:layout_constraintTop_toTopOf="@id/BoxMap"
        android:name="com.google.android.gms.maps.SupportMapFragment"/>

